{{#mdc-form submit=(action "signIn") valid=(action (mut valid))}}
  <div class="input-container">
    <div class="input-username-container">
      {{mdc-textfield value=username
                      style=style
                      type=usernameType
                      label=usernameLabel
                      icon=usernameIcon
                      iconPosition="trailing"
                      iconClickable=false
                      autocapitalize="none"
                      autocomplete=usernameAutoComplete
                      required=true
                      errorMessage=usernameErrorMessage}}
    </div>

    <div class="input-password-container">
      {{mdc-textfield value=password
                      style=style
                      required=true
                      type=passwordType
                      label=passwordLabel
                      icon=passwordIcon
                      iconPosition="trailing"
                      iconClickable=enableShowPassword
                      iconClick=(action "toggleShowPassword")
                      autocomplete="off"
                      autocapitalize="none"
                      errorMessage=passwordErrorMessage}}
    </div>

    <div>
      {{#mdc-button type="submit"
                    style=submitButtonStyle
                    disabled=disabled}}
        {{submitButtonText}}
      {{/mdc-button}}
    </div>
  </div>

  {{#if recaptcha}}
    {{component recaptcha.componentName verified=(action (mut recaptcha.value)) expired=(action (mut recaptcha.expired) true) reset=recaptcha.reset}}
  {{/if}}

{{/mdc-form}}

{{mdc-snackbar message=errorMessage show=showSnackbar}}
