{{#if errorMessage}}
  <div class="error-message">{{errorMessage}}</div>
{{/if}}

{{#mdl-form submit=(action "signIn")}}
  {{mdl-textfield type=usernameType
                  value=username
                  placeholder=usernamePlaceholder
                  required=true
                  autocapitalize="none"
                  autocomplete=usernameAutoComplete
                  label=usernameLabelText
                  fullWidth=true
                  floatingLabel=usernameFloatingLabel
                  errorMessage=usernameErrorMessage}}

  {{mdl-textfield type=(if showPassword "text" "password")
                  fullWidth=true
                  value=password
                  placeholder=passwordPlaceholder
                  required=true
                  label=passwordLabelText
                  autocomplete="off"
                  autocapitalize="none"
                  floatingLabel=passwordFloatingLabel
                  errorMessage=passwordErrorMessage}}

  {{#mdl-button type="submit"
                colored=signInButtonColored
                flat=signInButtonFlat
                color=signInButtonColor
                rippleEffect=signInButtonRippleEffect
                disabled=isSigningIn}}
    {{if isSigningIn signingInText signInText}}
  {{/mdl-button}}
{{/mdl-form}}
