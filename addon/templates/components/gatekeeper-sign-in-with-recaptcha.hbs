{{#mdc-form submit=(action "signIn") valid=(action (mut valid))}}
  <div class="gatekeeper-sign-in--input-controls">
    <div class="gatekeeper-sign-in--input gatekeeper-sign-in--username">
      {{mdc-textfield value=username
                      style=style
                      type=usernameType
                      label=usernameLabel
                      icon=usernameIcon
                      iconPosition="trailing"
                      iconClickable=false
                      autocapitalize="none"
                      autocomplete=usernameAutoComplete
                      required=true
                      errorMessage=usernameErrorMessage}}
    </div>

    <div class="gatekeeper-sign-in--input gatekeeper-sign-in--password">
      {{mdc-textfield value=password
                      style=style
                      required=true
                      type=passwordType
                      label=passwordLabel
                      icon=passwordIcon
                      iconPosition="trailing"
                      iconClickable=enableShowPassword
                      iconClick=(action "toggleShowPassword")
                      autocomplete="off"
                      autocapitalize="none"
                      errorMessage=passwordErrorMessage}}
    </div>

    <div>
      {{component componentName
                  siteKey=siteKey
                  verified=(action "verified")
                  reset=reset
                  execute=execute}}
    </div>

    <div class="gatekeeper-sign-in--submit">
      {{#mdc-button type="submit" style=submitButtonStyle disabled=disabled}}
        {{submitButtonText}}
      {{/mdc-button}}
    </div>
  </div>

{{/mdc-form}}

{{mdc-snackbar message=errorMessage show=showSnackbar}}
