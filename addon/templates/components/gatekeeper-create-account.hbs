{{#mdl-form submit=(action "createAccount")}}
  {{#unless useEmailForUsername}}
    {{mdl-textfield type="text"
                    value=username
                    label="Username"
                    fullWidth=true
                    required=true}}
  {{/unless}}

  {{mdl-textfield type="email"
                  value=email
                  label="Email address"
                  fullWidth=true
                  required=true}}

  {{mdl-textfield type="password"
                  value=password
                  label="Password"
                  fullWidth=true
                  required=true}}

  {{#if confirmPassword}}
    {{mdl-textfield type="password"
                    value=confirmedPassword
                    errorMessage=confirmErrorMessage
                    label="Confirm password"
                    fullWidth=true
                    required=true}}
  {{/if}}

  {{#if recaptcha}}
    {{component recaptcha.componentName verified=(action (mut recaptcha.value)) expired=(action (mut recaptcha.expired) true) reset=recaptcha.reset}}
  {{/if}}

  {{#mdl-button type="submit" color=submitButtonColor disabled=disableSubmit}}{{submitButtonText}}{{/mdl-button}}
{{/mdl-form}}

{{mdl-snackbar message=messageToUser}}
